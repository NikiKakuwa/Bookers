
<%= flash[:success] %>

<h1>books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @blogs.each do |blog| %>
		<tr>
			<td><%= blog.title %></td>
			<td><%= blog.body %></td>
			<td><%= link_to "Show", blog_path(blog.id) %></td>
			<td><%= link_to "Edit", edit_blog_path(blog) %></td>
			<td><%= link_to "Destroy", blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1>New Book</h1>

<%= form_for(@blog) do |f| %>
    <% if @blog.errors.any? %>
    <h3>
    <% @blog.errors.count %>errors prohibited this book from being saved:
    </h3>

	<ul>
	<% @blog.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

